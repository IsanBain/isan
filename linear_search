//Linear Search

#include<stdio.h>
void main()
{
	int a[100],n,s,i,f=1;
	printf("\nEnter the total number of element: ");
	scanf("%d",&n);
	for(i=0;i<n;i++)
	   {
	   	 printf("\nEnter the number of pos %d: ",i+1);
	   	 scanf("%d",&a[i]);
	   }
	printf("\nEnter the search Element: ");
	scanf("%d",&s);
	for(i=0;i<n;i++)
	   {
	     if(a[i] == s)
	       {
	       	 if(f == 1)
	       	   {
	       	     printf("\nSearch Successfull....");
	       	     f=0;
	       	   }
	       	 printf("\nElement Found at position no: %d",i+1);
		   }
	   }
	if(f == 1)
	  printf("\nSearch Unsuccessfull....");
}
